# Django
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=true
DJANGO_LOG_LEVEL=INFO

# Pagination
API_PAGE_SIZE=20

# JWT
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=7

# PostgreSQL (provided by the database container)
# Option A (orchestrator-style vars; must be set together)
POSTGRES_URL=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=collabsphere
POSTGRES_PORT=5432
#
# Option B (single URL; supported as well)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/collabsphere
